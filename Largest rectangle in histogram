class Solution:
    def largestRectangleArea(self, heights: list[int]) -> int:
        # Add a 0 at the end to force the stack to clear all elements
        heights.append(0)
        stack = [-1] # Initialize with -1 to act as a left boundary
        max_area = 0
        
        for i in range(len(heights)):
            # While the current height is shorter than the height at stack top
            while len(stack) > 1 and heights[i] < heights[stack[-1]]:
                # We found the right boundary for the bar at stack[-1]
                h = heights[stack.pop()]
                # width = current_index - index of new top - 1
                w = i - stack[-1] - 1
                max_area = max(max_area, h * w)
            
            stack.append(i)
            
        # Optional: remove the 0 we added if you need to keep input original
        heights.pop()
        return max_area
