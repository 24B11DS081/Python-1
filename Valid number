class Solution:
    def isNumber(self, s: str) -> bool:
        seen_digit = seen_dot = seen_e = False
        digit_after_e = True
        
        for i, char in enumerate(s):
            if char.isdigit():
                seen_digit = True
                digit_after_e = True
            
            elif char in "+-":
                # Sign can only appear at the start OR immediately after 'e'
                if i > 0 and s[i-1] not in "eE":
                    return False
            
            elif char in "eE":
                # 'e' can only appear once AND after at least one digit
                if seen_e or not seen_digit:
                    return False
                seen_e = True
                digit_after_e = False # We need a digit after this 'e'
            
            elif char == ".":
                # '.' can only appear once AND cannot appear after 'e'
                if seen_dot or seen_e:
                    return False
                seen_dot = True
            
            else:
                # Any other character (like 'a', '!', etc.) is invalid
                return False
        
        # Must have seen at least one digit and, if 'e' exists, it must be followed by a digit
        return seen_digit and digit_after_e
