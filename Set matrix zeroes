class Solution:
    def setZeroes(self, matrix: list[list[int]]) -> None:
        """
        Do not return anything, modify matrix in-place instead.
        """
        rows, cols = len(matrix), len(matrix[0])
        rowZero = False
        colZero = False

        # 1. Determine if first row or first col need to be zeroed
        for r in range(rows):
            if matrix[r][0] == 0:
                colZero = True
        for c in range(cols):
            if matrix[0][c] == 0:
                rowZero = True

        # 2. Use first row and col as markers for the rest of the matrix
        for r in range(1, rows):
            for c in range(1, cols):
                if matrix[r][c] == 0:
                    matrix[r][0] = 0
                    matrix[0][c] = 0

        # 3. Iterate through the matrix and zero out cells based on markers
        for r in range(1, rows):
            for c in range(1, cols):
                if matrix[r][0] == 0 or matrix[0][c] == 0:
                    matrix[r][c] = 0

        # 4. Final touch: zero out first row and col if markers say so
        if colZero:
            for r in range(rows):
                matrix[r][0] = 0
        if rowZero:
            for c in range(cols):
                matrix[0][c] = 0
