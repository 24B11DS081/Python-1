class Solution:
    def removeDuplicates(self, nums: list[int]) -> int:
        # If the array has 2 or fewer elements, it's already valid
        if len(nums) <= 2:
            return len(nums)
        
        # k is the write pointer, starting from the third position
        k = 2
        
        # Iterate through the array starting from the third element
        for i in range(2, len(nums)):
            # If current element is NOT the same as the element 
            # two positions behind our write pointer
            if nums[i] != nums[k - 2]:
                nums[k] = nums[i]
                k += 1
                
        return k
