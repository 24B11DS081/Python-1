import math

class Solution:
    def getPermutation(self, n: int, k: int) -> str:
        # Create a list of numbers to pick from: [1, 2, 3, ..., n]
        numbers = [i for i in range(1, n + 1)]
        
        # We use 0-based indexing for k to make math easier
        k -= 1
        
        res = []
        
        # We determine each digit of the permutation one by one
        for i in range(n - 1, -1, -1):
            # Calculate the factorial of the remaining slots
            fact = math.factorial(i)
            
            # Index of the number we need is k // fact
            index = k // fact
            
            # Append the chosen number to result and remove it from the pool
            res.append(str(numbers.pop(index)))
            
            # Update k for the next iteration
            k %= fact
            
        return "".join(res)
