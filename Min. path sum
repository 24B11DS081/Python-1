class Solution:
    def minPathSum(self, grid: list[list[int]]) -> int:
        rows, cols = len(grid), len(grid[0])
        
        # 1. Initialize the first row (only one way to reach: from the left)
        for j in range(1, cols):
            grid[0][j] += grid[0][j-1]
            
        # 2. Initialize the first column (only one way to reach: from above)
        for i in range(1, rows):
            grid[i][0] += grid[i-1][0]
            
        # 3. Fill the rest of the grid
        for i in range(1, rows):
            for j in range(1, cols):
                # Current cell = value + min of (top neighbor, left neighbor)
                grid[i][j] += min(grid[i-1][j], grid[i][j-1])
                
        return grid[-1][-1]
