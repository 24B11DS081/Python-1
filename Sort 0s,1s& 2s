class Solution:
    def sort012(self, arr):
        low = 0
        mid = 0
        high = len(arr) - 1
        
        while mid <= high:
            if arr[mid] == 0:
                # Swap mid with low, move both forward
                arr[low], arr[mid] = arr[mid], arr[low]
                low += 1
                mid += 1
            elif arr[mid] == 1:
                # 1 is in the right place (the middle section)
                mid += 1
            else: # arr[mid] == 2
                # Swap mid with high, move high backward
                # Don't move mid yet because the new arr[mid] needs checking
                arr[mid], arr[high] = arr[high], arr[mid]
                high -= 1
        
        return arr
