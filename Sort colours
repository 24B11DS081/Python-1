class Solution:
    def sortColors(self, nums: list[int]) -> None:
        """
        Do not return anything, modify nums in-place instead.
        """
        low = 0
        mid = 0
        high = len(nums) - 1
        
        while mid <= high:
            if nums[mid] == 0:
                # Found a Red: Swap with low and move both pointers
                nums[low], nums[mid] = nums[mid], nums[low]
                low += 1
                mid += 1
            elif nums[mid] == 1:
                # Found a White: Already in the right place, just move mid
                mid += 1
            else:
                # Found a Blue: Swap with high and move high pointer
                # We do NOT increment mid here because the swapped value
                # from high hasn't been processed yet.
                nums[mid], nums[high] = nums[high], nums[mid]
                high -= 1
